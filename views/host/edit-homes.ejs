<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-br from-red-50 to-pink-50 min-h-screen">
  <%- include('../partials/nav') %>

  <main class="container mx-auto px-4 py-12">
    <div class="max-w-lg mx-auto">
      
      <!-- Header Section -->
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-gray-800 mb-2">
          <%= editing ? "Edit Your Home" : "Register Your Home on Airbnb" %>
        </h1>
        <p class="text-gray-600">Fill out the form below to <%= editing ? "update" : "list" %> your home</p>
      </div>

      <!-- Form Container -->
      <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
        
        <!-- Form Header -->
        <div class="bg-gradient-to-r from-red-500 to-pink-500 px-8 py-6">
          <h2 class="text-2xl font-semibold text-white text-center">
            <%= editing ? "Update Home Details" : "Add a New Home" %>
          </h2>
        </div>

        <!-- Form Body -->
        <form action="/host/<%= editing ? 'edit-homes' : 'add-home' %>" 
              method="POST" 
              enctype="multipart/form-data" 
              class="p-8 space-y-6">

          <input type="hidden" name="homeId" value="<%= editing ? home._id : '' %>">

          <!-- House Name -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              House Name *
            </label>
            <input 
              type="text" 
              name="houseName" 
              value="<%= editing ? home.houseName : '' %>"
              placeholder="Enter your house name" 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg 
                     focus:outline-none focus:ring-2 focus:ring-red-500 
                     focus:border-transparent transition duration-200" 
              required
            />
          </div>

          <!-- Price -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Price Per Night *
            </label>
            <input 
              type="text" 
              name="price" 
              value="<%= editing ? home.price : '' %>" 
              placeholder="Enter price per night" 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg 
                     focus:outline-none focus:ring-2 focus:ring-red-500 
                     focus:border-transparent transition duration-200" 
              required
            />
          </div>

          <!-- Location -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Location *
            </label>
            <input 
              type="text" 
              name="location" 
              value="<%= editing ? home.location : '' %>" 
              placeholder="Enter location" 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg 
                     focus:outline-none focus:ring-2 focus:ring-red-500 
                     focus:border-transparent transition duration-200" 
              required
            />
          </div>

          <!-- Rating -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Rating
            </label>
            <input 
              type="text" 
              name="rating" 
              value="<%= editing ? home.rating : '' %>" 
              placeholder="Enter rating (optional)" 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg 
                     focus:outline-none focus:ring-2 focus:ring-red-500 
                     focus:border-transparent transition duration-200"
            />
          </div>

          <!-- Photo Upload -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Upload Home Photo
            </label>
            <input 
              type="file" 
              name="photo" 
              accept="image/jpg, image/jpeg, image/png"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg 
                     focus:outline-none focus:ring-2 focus:ring-red-500 
                     focus:border-transparent transition duration-200"
            />
          </div>

          <!-- Description -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Description
            </label>
            <textarea 
              name="description"
              placeholder="Describe your home"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg 
                     focus:outline-none focus:ring-2 focus:ring-red-500 
                     focus:border-transparent transition duration-200"
            ><%= editing ? home.description : '' %></textarea>
          </div>

          <!-- Submit Button -->
          <button 
            type="submit"
            class="w-full bg-gradient-to-r from-red-500 to-pink-500 
                   text-white py-3 px-4 rounded-lg font-semibold 
                   hover:from-red-600 hover:to-pink-600 
                   focus:outline-none focus:ring-2 focus:ring-red-500 
                   focus:ring-offset-2 transition duration-300 
                   transform hover:scale-105"
          >
            <%= editing ? "Update Home" : "Add Home" %>
          </button>

        </form>
      </div>

      <!-- Decorative Dots -->
      <div class="mt-8 flex justify-center space-x-2">
        <div class="w-3 h-3 bg-red-400 rounded-full"></div>
        <div class="w-3 h-3 bg-pink-400 rounded-full"></div>
        <div class="w-3 h-3 bg-red-300 rounded-full"></div>
      </div>
    </div>
  </main>
</body>
</html>
