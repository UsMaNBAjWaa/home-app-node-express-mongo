<%- include('../partials/head') %>
  </head>
  <body class="bg-gradient-to-br from-red-50 to-pink-50 min-h-screen">
    <%- include('../partials/nav') %>

    <main class="container mx-auto px-4 py-12">
      <div class="max-w-6xl mx-auto">
        <!-- Header Section -->
        <div class="text-center mb-8">
          <h2 class="text-4xl font-bold text-gray-800 mb-2">Hey Host! Here are your homes</h2>
          <p class="text-gray-600">Manage your listed properties here</p>
        </div>

        <!-- Cards Section -->
        <div class="flex flex-wrap justify-center gap-8">
          <% registeredHomes.forEach(home => { %>
            <div class="bg-white rounded-2xl shadow-xl overflow-hidden hover:shadow-2xl transition transform hover:scale-105 duration-300 w-full max-w-sm">
              <!-- Home Image -->
              <img 
                src="<%= home.photo %>" 
                alt="<%= home.houseName %>" 
                class="w-full h-52 object-cover hover:opacity-90 transition-opacity duration-300"
              />

              <!-- Card Content -->
              <div class="p-6">
                <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= home.houseName %></h3>
                <p class="text-gray-600 mb-2 flex items-center">
                  <i class="fas fa-map-marker-alt mr-2 text-red-500"></i><%= home.location %>
                </p>

                <div class="flex justify-between items-center mb-4">
                  <span class="text-lg font-bold text-red-500">Rs <%= home.price %> / night</span>
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" 
                         viewBox="0 0 24 24" 
                         fill="currentColor" 
                         class="w-5 h-5 text-yellow-400 mr-1">
                      <path fill-rule="evenodd" 
                            d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 
                               5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 
                               1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 
                               7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273
                               -4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 
                               2.082-5.006z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-gray-700"><%= home.rating %></span>
                  </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex justify-between items-center gap-4">
                  <!-- Edit Button -->
                  <a href="/host/edit-homes/<%= home._id %>?editing=true" 
                     class="bg-gradient-to-r from-blue-500 to-blue-600 text-white px-4 py-2 rounded-lg font-semibold hover:from-blue-600 hover:to-blue-700 transition duration-300 w-1/2 text-center">
                    Edit
                  </a>
                
                  <!-- Delete Button -->
                  <form action="/host/delete-home/<%= home._id %>" method="POST" class="w-1/2">
                    <button type="submit" 
                            class="bg-gradient-to-r from-red-500 to-red-600 text-white px-4 py-2 rounded-lg font-semibold hover:from-red-600 hover:to-red-700 transition duration-300 w-full"
                            onclick="return confirm('Are you sure you want to delete this home?')">
                      Delete
                    </button>
                  </form>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </main>
  </body>
</html>
